<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('fukuoka-logo-.JPG' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">店舗の情報を入力</h2>
    <%= form_with model: @content, local: true do |f| %>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
    <%= render 'shared/error_messages', model: f.object %>
    <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :images, name: 'content[images][]', id:"content-image" %>
       </div>
      <div class="image-list", id="image-list"></div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        お店の名前
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :restaurant, class:"items-text", id:"item-name", placeholder:"店名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          お店の説明
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"お店の説明（1,000文字まで）（お店特徴、名物料理、価格、、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">お店の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:genre_id, Genre.all, :id, :data, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          住所(地区)
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:city_id, City.all, :id, :data, {}, {class:"select-box", id:"item-sales-status"}) %>
        <div class="weight-bold-text">
          住所(市町)
          <span class="indispensable">必須</span>
          <%= f.collection_select(:town_id, Town.all, :id, :data, {}, {class:"select-box", id:"item-sales-status"}) %>
          </div>
          <div class="weight-bold-text">
          住所(区、番地)
          <span class="form-any">任意</span>
        <%= f.text_field 'house_number', class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
        </div>   
          <div class="weight-bold-text">
          予算
          <span class="indispensable">必須</span>
        </div>
          <%= f.collection_select(:price_id, Price.all, :id, :data, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('fukuoka-logo-.JPG' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>